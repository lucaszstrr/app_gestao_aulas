[phases.setup]
nixPkgs = ["php", "php82Extensions.curl", "php82Extensions.gd", "php82Extensions.mbstring", "php82Extensions.openssl", "php82Extensions.pdo_mysql", "php82Extensions.xml", "php82Extensions.zip", "php82Extensions.fileinfo", "composer", "nodejs"]

[phases.build]
commands = [
  "composer install --optimize-autoloader --no-dev",
  "npm install && npm run prod",
  "php artisan key:generate",
  "php artisan storage:link",
  "php artisan optimize"
]

[start]
cmd = "php artisan serve --host=0.0.0.0 --port=$PORT"